#!/usr/bin/env sh

{{ if eq .chezmoi.os "linux" -}}
{{ if eq .chezmoi.osRelease.id "fedora" -}}
sudo dnf install zsh bat exa trash-cli neovim python3-neovim lolcat fortune-mod cowsay starship git
{{ if .options.importssh -}}
sudo dnf install lastpass-cli
{{ end }}
{{ else if eq .chezmoi.osRelease.id "ubuntu" -}}
sudo apt install zsh bat exa trash-cli neovim python3-neovim lolcat fortune-mod cowsay git
curl -so- https://starship.rs/install.sh | sudo sh -s -- -y
{{ if .options.importssh -}}
sudo apt install lastpass-cli
{{ end }}
{{ end }}
mkdir -p $HOME/.local/share/antigen
curl -L https://git.io/antigen > $HOME/.local/share/antigen/antigen.zsh
{{ else if eq .chezmoi.os "darwin" -}}
brew install zsh bat exa trash-cli nvim lolcat fortune cowsay starship
{{ if .options.importssh -}}
brew install lastpass-cli
{{ end }}
mkdir -p $HOME/.local/share/antigen
curl -L https://git.io/antigen > $HOME/.local/share/antigen/antigen.zsh
{{ end -}}
